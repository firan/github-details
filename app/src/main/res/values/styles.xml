<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/PrimaryInteractionColor</item>
        <item name="colorPrimaryDark">@color/PrimaryInteractionColorDark</item>
        <item name="colorAccent">@color/PrimaryInteractionColor</item>
    </style>

    <style name="MaterialEditTextStyleWithoutBorders" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
        <item name="hintTextColor">@color/PrimaryInteractionColor</item>
    </style>

    <style name="SettingsLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/TextColor</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CardViewStyle">
        <item name="cardCornerRadius">0dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

</resources>
